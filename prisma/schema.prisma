generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Change this if you're using a different database
  url      = env("DATABASE_URL")
}

model user_model {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  role      UserRoles @default(USER)
  password  String
  posts     post_model[]
  rentals   rental_model[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model post_model {
  id        String  @id @default(uuid())
  title     String
  content   String?
  user      user_model    @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model car_model {
  id         String  @id @default(uuid())
  model      String
  brand      String
  year       Int
  pricePerDay Float
  status     CarStatus @default(AVAILABLE)
  rentals    rental_model[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model rental_model {
  id         String  @id @default(uuid())
  user       user_model    @relation(fields: [userId], references: [id])
  userId     String
  car        car_model     @relation(fields: [carId], references: [id])
  carId      String
  startDate  DateTime
  endDate    DateTime
  status     RentalStatus @default(PENDING)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum CarStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
}

enum RentalStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

enum UserRoles {
  USER
  ADMIN
}

